{% extends 'base_back.html.twig' %}
{% block title %}Edit betting_group{% endblock %}




{% block body %}
    <main class=" flex justify-center items-center flex-col">
        <section class="flex bg-white p-10 rounded-xl w-3/4 mt-20">
            {%  if betting_group.cover is defined %}
                <div class=" w-48 h-48  rounded-full border  border-gray-200 ml-5 ">
                    <img src="/logos/{{ betting_group.cover }}" alt="" class="object-cover w-full h-full rounded-full"  >
                </div>
            {% endif %}
            <div class="flex flex-col justify-center ml-10">
                <h1 class="text-2xl font-bold text-gray-700">{{ betting_group.name }}</h1>
                {%  if betting_group.description is defined %}
                    <p class="text-gray-500 mb-2">Description:
                    {{ betting_group.description }}
                    </p>

                {% endif %}
               <p class="text-gray-500 mb-2">Membres:</p>
                <div class="grid grid-cols-3 gap-4 justify-items-center">

                {% for member in betting_group.members %}
                        <div class="flex flex-col justify-center items-center">
                            <a href="{{path('back_app_user_show', {'id': member.id}) }}">
                                <img class="h-20 w-20 rounded-full mx-auto my-0 object-cover" src="/avatar/{{ member.avatar }}" alt="image_profile" />
                            </a>
                            <p class="text-gray-900">{{ member.pseudo }}</p>
                        </div>
                {% endfor %}
                </div>

                <p class="text-gray-500 mt-10  mb-2">Administrators:</p>
                <div class="grid grid-cols-3 gap-4 justify-items-center">

                    {% for member in betting_group.administrators %}
                        <div class="flex flex-col justify-center items-center">
                            <a href="{{path('back_app_user_show', {'id': member.id}) }}">
                                <img class="h-20 w-20 rounded-full mx-auto my-0 object-cover" src="/avatar/{{ member.avatar }}" alt="image_profile" />
                            </a>
                            <p class="text-gray-900">{{ member.pseudo }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>

                <div class="flex flex-col  ml-10">

                    {{ include('back/betting_group/_delete_form.html.twig') }}
                    <a href="{{ path('back_app_betting_group_edit', {'id': betting_group.id}) }}">
                    <button class="btn btn-outline  btn-warning">Edit</button>
                    </a>

                </div>

        </section>

        <div class="back-link mt-20">
            <a class="text-white bg-blue-900 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2  dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" href="{{ path('back_app_betting_group_index') }}">

                <i class="fa fa-arrow-left"></i>
                back to list </a>
        </div>
    </main>


{% endblock %}
