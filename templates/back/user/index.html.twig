{% extends 'base_back.html.twig' %}

{% block title %}Users{% endblock %}


{% block body %}
 <div class="h-full ml-14 mt-14 mb-10 md:ml-64">        
    <div class="overflow-x-auto w-full h-screen">
        <div class="min-w-screen min-h-screen bg-gray-100 flex items-center justify-center bg-gray-100 font-sans overflow-hidden">
            <div class="w-full lg:w-5/6">
                <div class="bg-white shadow-md rounded my-6">
        <table class="min-w-max w-full table-auto">
            <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-center">PP</th>
                    <th class="py-3 px-6 text-center">E-mail</th>
                    <th class="py-3 px-6 text-center">Show</th>
                    <th class="py-3 px-6 text-center">Edit</th>
                    <th class="py-3 px-6 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">

            {% for user in users %}

                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-center">
                        <a href="{ path('back_app_user_show', {'id': user.id}) }}">
                            <img class="w-20 h-20 rounded-full mx-auto my-0" src="{{ user.avatar }}" alt="image_profile" />
                        </a>
                        </td>
                        <td class="py-3 px-6 text-center">
                        <div class="">
                            <a href="{ path('back_app_user_show', {'id': user.id}) }}">
                                <h5 class="">{{ user.email }}</h5>
                            </a>
                        </td>
                        <td class="py-3 px-6 text-center">
                        
                            <a class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-green-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" href="{{ path('back_app_user_show', {'id': user.id}) }}">show</a>
                        </td>
                        <td class="py-3 px-6 text-center">
                            <a class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" href="{{ path('back_app_user_edit', {'id': user.id}) }}">edit</a>
                        </td>
                        <td class="py-3 px-6 text-center">
                         {{ include('back/user/_delete_form.html.twig') }}
                        </td>
                        </div>
                    </tr>


            {% else %}
                    <p colspan="7">no records found</p>
            {% endfor %}

            </tbody>
        </table>
        {{ knp_pagination_render(users) }}
        </div>
        </div>
        </div>
    </div>
    </div>


{% endblock %}
