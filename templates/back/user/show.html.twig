{% extends 'base_back.html.twig' %}
{% block title %}Edit user{% endblock %}




{% block body %}
    <main class=" flex justify-center items-center flex-col">
        <section class="flex bg-white p-10 rounded-xl w-3/4 mt-20">
            {%  if user.avatar is defined %}
                <div class=" w-48 h-48  rounded-full border  border-gray-200 ml-5 ">
                    <img src="/avatar/{{ user.avatar }}" alt="" class="object-cover w-full h-full rounded-full"  >
                </div>
            {% endif %}
            <div class="flex flex-col justify-center ml-10">
                <h1 class="text-2xl font-bold text-gray-700">{{ user.firstName }}</h1>
                <h1 class="text-2xl font-bold text-gray-700">{{ user.lastName }}</h1>
               <p class="text-gray-500">Email: <span class="text-gray-900">{{ user.email }}</span></p>
               <p class="text-gray-500">Pseudo: <span class="text-gray-900">{{ user.pseudo }}</span></p>
               <p class="text-gray-500">Roles:</p>
                {% for role in user.roles %}
                    <p class="text-gray-900">{{ role }}</p>
                {% endfor %}


                </div>

                <div class="flex flex-col justify-center ml-10">

                    {{ include('back/user/_delete_form.html.twig') }}
                    <a href="{{ path('back_app_user_edit', {'id': user.id}) }}">
                    <button class="btn btn-outline  btn-warning">Edit</button>
                    </a>

                </div>

        </section>

        <div class="back-link mt-20">
            <a class="text-white bg-blue-900 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2  dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" href="{{ path('back_app_user_index') }}">

                <i class="fa fa-arrow-left"></i>
                back to list </a>
        </div>
    </main>


{% endblock %}
