<!DOCTYPE html>

<title>Event index</title>

{% block body %}
    <h1>Event Bets of group {{ bettingGroup.name }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>CreatedAt</th>
            <th>FinishAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.finishAt ? event.finishAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('front_app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('front_app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
